{
  "name": "ourvoice-api",
  "version": "0.0.1",
  "description": "API for OurVoice",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "NODE_ENV=test pnpm prisma:migrate:main:test && pnpm prisma:generate:main:test && jest --runInBand --config ./test/jest.integration.config.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:migrate:main": "prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:migrate:premoderation": "prisma migrate dev --schema ./prisma-premoderation/schema.prisma",
    "prisma:migrate:main:test": "NODE_ENV=test prisma migrate dev --schema ./prisma/test/schema.prisma",
    "prisma:generate:main": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:generate:premoderation": "prisma generate --schema ./prisma-premoderation/schema.prisma",
    "prisma:generate:main:test": "NODE_ENV=test prisma generate --schema ./prisma/test/schema.prisma",
    "graphql:generate": "pnpm exec tsx ./src/graphql/generate-typings.ts",
    "prisma:generate:contactform": "prisma generate --schema ./prisma-contactform/schema.prisma"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@aws-sdk/client-s3": "^3.341.0",
    "@aws-sdk/s3-request-presigner": "^3.341.0",
    "@golevelup/ts-jest": "^0.3.7",
    "@nestjs/apollo": "^11.0.6",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/graphql": "^11.0.6",
    "@nestjs/platform-express": "^9.4.2",
    "@prisma/client": "^4.14.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.6.0",
    "nodemailer": "^6.9.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "supertokens-node": "^14.1.1",
    "ts-morph": "^18.0.0",
    "webpack": "^5.84.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "28.1.8",
    "@types/node": "^18.16.16",
    "@types/nodemailer": "^6.4.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "28.1.3",
    "prettier": "^2.8.8",
    "prisma": "^4.14.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testPathIgnorePatterns": [
      ".*integration\\.spec\\.ts"
    ],
    "testEnvironment": "node"
  }
}
